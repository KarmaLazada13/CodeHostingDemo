@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    // Lấy thông điệp từ biến môi trường (để demo "Operating & maintaining")
    var appMessage = Environment.GetEnvironmentVariable("APP_MESSAGE") 
                     ?? "Hello v2 (Demo via Git/Render)";

    var envName = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")
                   ?? "Production";

    var nowUtc = DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss 'UTC'");
}

<div class="text-center" style="margin-top:2rem">
    <h1 class="display-4">CodeHostingDemo</h1>

    <p style="font-weight:600; font-size:1.25rem; margin-top:1rem;">
        @appMessage
    </p>

    <p style="margin-top:0.5rem">
        Environment: <code>@envName</code><br />
        Rendered at: <code>@nowUtc</code>
    </p>

    <hr style="margin:2rem auto; max-width:480px" />

    <p>
        Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener">
        building Web apps with ASP.NET Core</a>.
    </p>
</div>
